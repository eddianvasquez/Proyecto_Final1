@page "/contacto"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Proyecto_Final1.Data
@using Proyecto_Final1.Models.Usuarios
@using System.Security.Claims @* Agregado para ClaimTypes *@
@using Microsoft.EntityFrameworkCore @* Agregado para EntityState *@
@inject ApplicationDbContext Context
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Contacto - Mercado Orgánico</PageTitle>

<main class="container mx-auto px-4 py-12">
    <section class="mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 text-center">Contáctanos</h1>
        <p class="text-center text-gray-700 text-lg max-w-2xl mx-auto mb-12">
            ¿Tienes preguntas sobre un pedido, la disponibilidad de algún producto, o futuras adiciones a nuestra mercadería? ¡Estamos aquí para ayudarte! Completa el formulario a continuación y nos pondremos en contacto contigo pronto.
        </p>

        <div class="bg-green-50 p-8 rounded-lg shadow-xl max-w-2xl mx-auto">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Envíanos tu Consulta</h2>

            @if (!string.IsNullOrEmpty(submissionMessage))
            {
                <div class="@(submissionSuccess ? "bg-green-100 border-l-4 border-green-500 text-green-700" : "bg-red-100 border-l-4 border-red-500 text-red-700") p-4 mb-6 rounded-md shadow-sm" role="alert">
                    <p class="font-bold">@(submissionSuccess ? "¡Éxito!" : "Error:")</p>
                    <p>@submissionMessage</p>
                </div>
            }

            <EditForm Model="@nuevaConsulta" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="space-y-6">
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700">Asunto de la Consulta</label>
                        <InputText id="subject" @bind-Value="nuevaConsulta.Asunto" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" placeholder="Ej: Estado de un pedido, Nuevo producto" />
                        <ValidationMessage For="@(() => nuevaConsulta.Asunto)" />
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700">Tu Mensaje</label>
                        <InputTextArea id="message" @bind-Value="nuevaConsulta.Mensaje" rows="6" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" placeholder="Detalla tu pregunta o solicitud aquí..." />
                        <ValidationMessage For="@(() => nuevaConsulta.Mensaje)" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="w-full md:w-auto bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-md transition duration-150 ease-in-out transform hover:scale-105">
                            Enviar Consulta
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </section>

    <hr class="my-12">

    <section class="text-center text-gray-600">
        <p>Si prefieres, también puedes contactarnos directamente por teléfono o correo electrónico:</p>
        <p class="mt-4 text-xl font-semibold text-gray-800">
            <i class="fas fa-phone-alt text-green-600 mr-2"></i> +1 (809) 555-1234
        </p>
        <p class="mt-2 text-xl font-semibold text-gray-800">
            <i class="fas fa-envelope text-green-600 mr-2"></i> info@mercadoorganico.com
        </p>
    </section>
</main>

@code {
    private Consulta nuevaConsulta = new Consulta();
    private string submissionMessage;
    private bool submissionSuccess;

    private async Task HandleSubmit()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity.IsAuthenticated)
            {
                nuevaConsulta.UsuarioId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                nuevaConsulta.FechaEnvio = DateTime.Now;

                // Asegúrate de que el objeto Usuario no esté adjunto si viene de una carga anterior,
                // o que el contexto lo maneje correctamente. En este caso, solo necesitas el UsuarioId.
                // Si la relación se carga automáticamente o se intenta adjuntar, puede dar error.
                // Es mejor dejar que EF Core maneje la relación solo con el ID.
                if (nuevaConsulta.Usuario != null)
                {
                    // Desvincula el objeto Usuario para evitar errores de seguimiento de EF Core
                    Context.Entry(nuevaConsulta.Usuario).State = EntityState.Detached;
                }

                Context.Consultas.Add(nuevaConsulta);
                await Context.SaveChangesAsync();

                submissionMessage = "¡Tu consulta ha sido enviada exitosamente! Nos pondremos en contacto contigo pronto.";
                submissionSuccess = true;
                nuevaConsulta = new Consulta(); // Resetear el formulario
            }
            else
            {
                submissionMessage = "Debes iniciar sesión para enviar una consulta.";
                submissionSuccess = false;
            }
        }
        catch (Exception ex)
        {
            submissionMessage = $"Error al enviar tu consulta: {ex.Message}";
            submissionSuccess = false;
            Console.WriteLine($"Error al enviar consulta: {ex.Message}");
        }
    }
}
